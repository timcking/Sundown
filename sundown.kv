#:kivy 1.0

BoxLayout:

    canvas.before:
        Color:
            rgba: (0, 0, 128, .3)
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'vertical'
    rows: 3

    BoxLayout:
        orientation: 'horizontal'
        height: dp(30)
        size_hint_y: None
        rows: 1

        TextInput:
            id: search_text
            height: dp(30)
            hint_text: 'Enter City'
            size_hint_y: None
            multiline: False
            padding: dp(5), dp(5), 0, 0

        Button:
            id: button_search
            text: 'Search'
            size_hint_x: None
            width: dp(80)
            size_hint_y: None
            height: dp(30)
            on_press: app.search_city()

    BoxLayout:
        orientation: 'horizontal'
        rows: 1
        padding: dp(10)

        AsyncImage:
            id: sunup
            allow_stretch: True
            source: './data/sunrise-sunset.png'


    GridLayout:
        cols: 2

        Label:
            id: label_sunrise
            font_size: '24sp'
            size_hint_y: None
            height: dp(80)
            halign: 'center'

        Label:
            id: label_sunset
            font_size: '24sp'
            size_hint_y: None
            height: dp(80)
            halign: 'center'

    Label:
        id: label_datetime
        halign: 'center'
        font_size: '18sp'
